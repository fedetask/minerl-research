<?xml version="1.0" encoding="UTF-8" ?>
<Mission xmlns="http://ProjectMalmo.microsoft.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <About>
        <Summary>Everyday Minecraft life: survival</Summary>
    </About>

    <ModSettings>
        <MsPerTick>20</MsPerTick>
    </ModSettings>

    <ServerSection>
        <ServerInitialConditions>
            <Time>
                <StartTime>12000</StartTime>
                <AllowPassageOfTime>false</AllowPassageOfTime>
            </Time>
        </ServerInitialConditions>
        <ServerHandlers>
            <FlatWorldGenerator forceReset="true"/>
            <DrawingDecorator>
                <DrawLine type="cobblestone" x1="0" y1="4" z1="0" x2="0" y2="4" z2="4" />
                <DrawLine type="cobblestone" x1="0" y1="4" z1="0" x2="2" y2="4" z2="0" />
                <DrawLine type="cobblestone" x1="2" y1="4" z1="0" x2="2" y2="4" z2="2" />
                <DrawLine type="cobblestone" x1="0" y1="4" z1="4" x2="2" y2="4" z2="4"/>
                <DrawLine type="cobblestone" x1="2" y1="4" z1="2" x2="4" y2="4" z2="2"/>
                <DrawLine type="cobblestone" x1="2" y1="4" z1="4" x2="2" y2="4" z2="5"/>
                <DrawLine type="cobblestone" x1="2" y1="4" z1="5" x2="4" y2="4" z2="5"/>
                <DrawLine type="cobblestone" x1="4" y1="4" z1="3" x2="6" y2="4" z2="3"/>
                <DrawLine type="cobblestone" x1="6" y1="4" z1="3" x2="6" y2="4" z2="6"/>
                <DrawLine type="cobblestone" x1="4" y1="4" z1="6" x2="4" y2="4" z2="8"/>
                <DrawLine type="cobblestone" x1="4" y1="4" z1="8" x2="6" y2="4" z2="8"/>
                <DrawLine type="cobblestone" x1="6" y1="4" z1="6" x2="8" y2="4" z2="6"/>
                <DrawLine type="cobblestone" x1="8" y1="4" z1="6" x2="8" y2="4" z2="9"/>
                <DrawLine type="cobblestone" x1="6" y1="4" z1="9" x2="7" y2="4" z2="9"/>
                <DrawBlock type="log" x="7" y="2" z="8"/>

                <DrawBlock type="iron_ore" x="10" y="4" z="10"/>
                <!--
                <DrawLine type="cobblestone" x1="6" y1="4" z1="7" x2="8" y2="4" z2="7"/>
                <DrawLine type="cobblestone" x1="6" y1="5" z1="7" x2="8" y2="5" z2="7"/>

                <DrawLine type="cobblestone" x1="8" y1="4" z1="7" x2="8" y2="4" z2="9"/>
                <DrawLine type="cobblestone" x1="8" y1="5" z1="7" x2="8" y2="5" z2="9"/>

                <DrawLine type="cobblestone" x1="8" y1="4" z1="9" x2="6" y2="4" z2="9"/>
                <DrawLine type="cobblestone" x1="8" y1="5" z1="9" x2="6" y2="5" z2="9"/>

                <DrawLine type="cobblestone" x1="6" y1="4" z1="7" x2="6" y2="4" z2="9"/>
                <DrawLine type="cobblestone" x1="6" y1="5" z1="7" x2="6" y2="5" z2="9"/>
                -->
            </DrawingDecorator>
            <ServerQuitFromTimeUp timeLimitMs="3000000" description="out_of_time"/>
            <ServerQuitWhenAnyAgentFinishes />
        </ServerHandlers>
    </ServerSection>

    <AgentSection mode="Survival">
        <Name>Rover</Name>
        <AgentStart>
            <Placement x="1" y="4" z="1"/>
        </AgentStart>
        <AgentHandlers>
            <!-- Commands -->
            <ContinuousMovementCommands turnSpeedDegs="120"/>
            <InventoryCommands/>
            <SimpleCraftCommands/>

            <!-- Observations -->
            <ObservationFromFullStats/>
            <ObservationFromFullInventory flat="false"/>
            <ObservationFromNearbyEntities>
                <Range name="NearbyEntities" xrange="15" yrange="8" zrange="15"/>
            </ObservationFromNearbyEntities>
            <ObservationFromGrid>
                <Grid name="Grid">
                    <min x="-15" y="-10" z="-15"/>
                    <max x="15" y="10" z="15"/>
                </Grid>
            </ObservationFromGrid>
            <ObservationFromRay includeNBT="false"/>
        </AgentHandlers>
    </AgentSection>
</Mission>
