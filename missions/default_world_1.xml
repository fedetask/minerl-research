<?xml version="1.0" encoding="UTF-8" ?>
<Mission xmlns="http://ProjectMalmo.microsoft.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <About>
        <Summary>Everyday Minecraft life: survival</Summary>
    </About>

    <ModSettings>
        <MsPerTick>20</MsPerTick>
    </ModSettings>

    <ServerSection>
        <ServerInitialConditions>
            <Time>
                <StartTime>12000</StartTime>
                <AllowPassageOfTime>false</AllowPassageOfTime>
            </Time>
        </ServerInitialConditions>
        <ServerHandlers>
            <DefaultWorldGenerator />
            <ServerQuitFromTimeUp timeLimitMs="3000000" description="out_of_time"/>
            <ServerQuitWhenAnyAgentFinishes />
        </ServerHandlers>
    </ServerSection>

    <AgentSection mode="Survival">
        <Name>Rover</Name>
        <AgentStart>
        </AgentStart>
        <AgentHandlers>
            <!-- Commands -->
            <ContinuousMovementCommands turnSpeedDegs="120"/>
            <InventoryCommands/>
            <SimpleCraftCommands/>

            <!-- Observations -->
            <ObservationFromFullStats/>
            <ObservationFromFullInventory flat="false"/>
            <ObservationFromNearbyEntities>
                <Range name="NearbyEntities" xrange="15" yrange="8" zrange="15"/>
            </ObservationFromNearbyEntities>
            <ObservationFromGrid>
                <Grid name="Grid">
                    <min x="-15" y="-10" z="-15"/>
                    <max x="15" y="10" z="15"/>
                </Grid>
            </ObservationFromGrid>
            <ObservationFromRay includeNBT="false"/>
            <VideoProducer want_depth="false">
                <Width>480</Width>
                <Height>320</Height>
            </VideoProducer>
        </AgentHandlers>
    </AgentSection>
</Mission>
